<header id="header">
  <div class="header-top">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 col-sm-6 col-6 header-top-left">
          <ul>
            <% byebug %>
          <% if user_signed_in? %>
            <li class="name"><%= current_user.full_name %></li>
            <li><%= link_to t(".logout"), destroy_user_session_path, method: :delete %></li>
            <li><%= link_to t(".profile"), "#" %></li>
            <li><%= link_to t(".setting"), edit_user_registration_path %></li>
            <% unless current_user.user? %>
              <li><%= link_to t(".manage"), admin_root_path %></li>
            <% end %>
          <% else %>
            <li><%= link_to t(".register"), new_user_registration_path %></li>
            <li><%= link_to t(".login"), new_user_session_path %></li>
            <li><%= link_to t(".connect_facebook"), "/auth/facebook" %></li>
          <% end %>
          </ul>
        </div>
        <div class="col-lg-6 col-sm-6 col-6 header-top-right">
        <div class="header-social">
          <li><%= link_to t(".lang_vi"), locale: :vi %></li>
          <li><%= link_to t(".lang_en"), locale: :en %></li>
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container main-menu">
    <div class="row align-items-center justify-content-end d-flex">
        <div id="logo">
        </div>
        <nav id="nav-menu-container">
          <ul class="nav-menu">
            <li><%= link_to t(".home"), root_path %></li>
            <li><%= link_to t(".about"), about_path %></li>
            <li class="menu-has-children"><%= link_to t(".blog"), blog_path %>
            </li>
            <li><%= link_to t(".contact"), contact_path %></li>
             <% if current_user %>
              <li>
                <%= link_to bookings_path, class: "btn btn-info btn-lg" do %>
                  <span class="glyphicon glyphicon-shopping-cart"></span> <%= t ".booking" %>
                <% end%>
              </li>
            <% end %>
          </ul>
        </nav>
    </div>
  </div>
</header>
