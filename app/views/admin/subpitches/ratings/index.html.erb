<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div>
  <%= search_form_for @search, url: admin_ratings_path, local: true, class: "input-group left wid50" do |f| %>
    <%= f.text_field :user_full_name_or_content_cont, class: "form-control wid30 left", id: "input1-group2" %>
    <span class="input-group-prepend left ">
      <%= f.button "", class: "btn btn-primary glyphicon glyphicon-search" %>
    </span>
  <% end %>
</div>
<hr class="mt-0">
<table class = "table table-responsive-sm table-hover table-outline mb-0">
  <thead class="thead-light">
    <tr>
      <th class = "text-center"><%= sort_link @search, :user, t(".user") %></th>
      <th class = "text-center"><%= t ".subpitch" %></th>
      <th class = "text-center"><%= sort_link @search, :star, t(".star") %></th>
      <th class = "text-center"><%= t ".content" %></th>
      <th class = "text-center"><%= t ".option" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "rating", collection: @ratings, locals: {subpitch: @subpitch} %>
  </tbody>
</table>
<hr class="mt-0">
<%= will_paginate @ratings %>
