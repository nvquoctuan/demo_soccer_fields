<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div>
  <%= search_form_for @search, url: "#", local: true, class: "input-group left wid40" do |f| %>
    <%= f.text_field :content_cont, class: "form-control wid30 left", id: "input1-group2" %>
    <span class="input-group-prepend left ">
      <%= f.button "", class: "btn btn-primary glyphicon glyphicon-search" %>
    </span>
  <% end %>
  <%= link_to t(".new"), new_admin_recharge_path, style: "float:right" %>
</div>
<hr class="mt-0">
<table class = "table table-responsive-sm table-hover table-outline mb-0">
  <thead class="thead-light">
    <tr>
      <th class = "text-center"><%= sort_link @search, :sender_id, t(".sender")%></th>
      <th class = "text-center"><%= sort_link @search, :receiver_id, t(".receiver") %></th>
      <th class = "text-center"><%= t ".content" %></th>
      <th class = "text-center"><%= sort_link @search, :money, t(".money") %></th>
      <th class = "text-center"><%= t ".option" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @recharges %>
  </tbody>
</table>
<hr class="mt-0">
<%= will_paginate @recharges %>
