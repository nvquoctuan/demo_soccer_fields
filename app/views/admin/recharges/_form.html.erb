<%= form_for @recharge, url: admin_recharges_path do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :receiver_id %>
  <%= f.select "receiver_id", options_for_select(@users.collect{|u| [t(u[:full_name]), {class: "dropdown-menu show"}, u[:id]]}, class: ""), {}, {class: "btn btn-info dropdown-toggle"} %>

  <%= f.label :content %>
  <%= f.text_area :content, class: "form-control" %>

  <%= f.label :money %>
  <%= f.number_field :money, class: "form-control" %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
