<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div>
  <div>
    <%= search_form_for @search, url: admin_pitches_path, local: true, class: "input-group left wid40" do |f| %>
      <%= f.text_field :name_or_description_cont, class: "form-control wid30 left", id: "input1-group2" %>
      <span class="input-group-prepend left">
        <%= f.button "", class: "btn btn-primary" do %>
          <svg class="c-icon h14 w20">
            <use xlink:href="/assets/admin/coreui/free-symbol-defs.svg#cui-magnifying-glass"></use>
          </svg> <%= t "generate.search" %>
        <% end %>
      </span>
    <% end %>
    <%= link_to t(".new"), new_admin_pitch_path, style: "float:right" %>
  </div>
</div>
<hr class="mt-0">
<table class = "table table-responsive-sm table-hover table-outline mb-0">
  <thead class="thead-light">
    <tr>
      <th class = "text-center"><%= t ".user" %></th>
      <th class = "text-center"><%= sort_link @search, :name,  t(".name") %></th>
      <th class = "text-center"><%= t ".description" %></th>
      <th class = "text-center"><%= sort_link @search, :country,  t(".country") %></th>
      <th class = "text-center"><%= t ".city" %></th>
      <th class = "text-center"><%= t ".district" %></th>
      <th class = "text-center"><%= t ".picture" %></th>
      <th class = "text-center"><%= t ".phone" %></th>
      <th class = "text-center"><%= t ".start_time" %></th>
      <th class = "text-center"><%= t ".end_time" %></th>
      <th class = "text-center"><%= t ".limit" %></th>
      <th class = "text-center"><%= t ".option" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "pitch", collection: @pitches %>
  </tbody>
</table>
<hr class="mt-0">
<%= will_paginate @pitches %>
