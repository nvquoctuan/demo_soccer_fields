<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div>
  <%= search_form_for @search, url: "#", class: "input-group left wid50" do |f| %>
    <%= f.text_field :admin_revenue, class: "form-control wid30 left", id: "input1-group2", placeholder: "Name or descripition" %>
    <div class='input-group date w150 left' id='datetimepicker1'>
        <%= f.text_field :subpitches_bookings_start_time_gteq, class: "form-control" %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
    <div class='input-group date w150 left' id='datetimepicker2'>
        <%= f.text_field :subpitches_bookings_end_time_lteq, class: "form-control" %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
    <span class="input-group-prepend left ">
      <%= f.button "", class: "btn btn-primary glyphicon glyphicon-search" %>
    </span>
  <% end %>
  <% if @revenues.present? %>
    <p class="right">
      <span class = " glyphicon glyphicon-download"></span>
      <%= link_to t("generate.csv"), admin_revenue_path(format: "csv") %> |
      <%= link_to t("generate.excel"), admin_revenue_path(format: "xls") %>
    </p>
  <% end %>
</div>
<hr class="mt-0">
<table class = "table table-responsive-sm table-hover table-outline mb-0">
  <thead class="thead-light">
    <tr>
      <th class = "text-center"><%= t ".user" %></th>
      <th class = "text-center"><%= t ".name" %></th>
      <th class = "text-center"><%= t ".description" %></th>
      <th class = "text-center"><%= t ".country" %></th>
      <th class = "text-center"><%= t ".city" %></th>
      <th class = "text-center"><%= t ".district" %></th>
      <th class = "text-center"><%= t ".picture" %></th>
      <th class = "text-center"><%= t ".phone" %></th>
      <th class = "text-center"><%= t ".start_time" %></th>
      <th class = "text-center"><%= t ".end_time" %></th>
      <th class = "text-center"><%= sort_link @search, :limit, t(".limit") %></th>
      <th class = "text-center"><%= t ".total" %></th>
      <th class = "text-center"><%= t ".option" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "revenue", collection: @revenues %>
    <% if @revenues.present? %>
      <tr>
        <td colspan="14"><h4 class="right cl-blue"><%= t "generate.total",add: @sum %></h4></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr class="mt-0">
<%= will_paginate @revenues %>
