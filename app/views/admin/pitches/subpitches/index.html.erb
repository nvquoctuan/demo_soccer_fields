<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div>
  <div>
    <%= search_form_for @search, url: admin_pitch_subpitches_path, local: true, class: "input-group left wid40" do |f| %>
      <%= f.text_field :name_or_description_cont, class: "form-control wid30 left", id: "input1-group2" %>
      <span class="input-group-prepend left">
        <%= f.button "", class: "btn btn-primary" do %>
          <svg class="c-icon h14 w20">
            <use xlink:href="/assets/admin/coreui/free-symbol-defs.svg#cui-magnifying-glass"></use>
          </svg> <%= t "generate.search" %>
        <% end %>
      </span>
    <% end %>
    <%= link_to t(".new"), new_admin_pitch_subpitch_path, style: "float:right" %>
  </div>
</div>
<hr class="mt-0">
<table class = "table table-responsive-sm table-hover table-outline mb-0">
  <thead class="thead-light">
    <tr>
      <th class = "text-center"><%= t ".id" %></th>
      <th class = "text-center"><%= t ".pitch_name" %></th>
      <th class = "text-center"><%= t ".subpitch_type" %></th>
      <th class = "text-center"><%= t ".name" %></th>
      <th class = "text-center"><%= t ".description" %></th>
      <th class = "text-center"><%= t ".pirce" %></th>
      <th class = "text-center"><%= t ".currency" %></th>
      <th class = "text-center"><%= t ".picture" %></th>
      <th class = "text-center"><%= t ".size" %></th>
      <th class = "text-center"><%= t ".option" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @subpitches %>
  </tbody>
</table>
<hr class="mt-0">
<div>
  <%= link_to t("general.back"), admin_pitches_path %> |
  <%= will_paginate @subpitches %>
</div>
